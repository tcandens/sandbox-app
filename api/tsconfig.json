{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "build",
    "types": [
      "node",
      "koa",
      "graphql"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es6",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
